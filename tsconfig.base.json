{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "incremental": true,
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@aiostreams/types": ["packages/types/src"],
      "@aiostreams/parser": ["packages/parser/src"],
      "@aiostreams/utils": ["packages/utils/src"]
    }
  }
}
